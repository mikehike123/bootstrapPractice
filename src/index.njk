        </div>

        </div>
    </section>
    <section id="services" class="container">
        <h3>Services Offered</h3>
     
        <div class="row d-flex align-items-stretch">
            {%- for service in collections.service -%}
                {% include 'service.njk' %}
            {%- endfor -%}
            
            
        </div>
